<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:gravity="center"
    android:padding="10dp">

    <nsapp.childgames.view.MTextView
        android:id="@+id/messageDialogTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/messageDialogTV"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">


        <nsapp.childgames.view.MTextView
            android:id="@+id/noDialogTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/red_textview"
            android:clickable="true"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="@color/red_text"
            android:textSize="20sp" />

        <nsapp.childgames.view.MTextView
            android:id="@+id/neutralDialogTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/white_textview"
            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/white_text"
            android:textSize="20sp" />

        <nsapp.childgames.view.MTextView
            android:id="@+id/yesDialogTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/green_textview"
            android:clickable="true"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="@color/green_text"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>